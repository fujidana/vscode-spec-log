// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "compile",
			"group": "build",
			"problemMatcher": [
				"$ts-webpack",
				"$tslint-webpack"
			]
		},
		{
			"type": "npm",
			"script": "watch",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"isBackground": true,
			"problemMatcher": [
				"$ts-webpack-watch",
				"$tslint-webpack-watch"
			]
		},
		{
			"type": "npm",
			"script": "watch-tests",
			"group": "build",
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"isBackground": true,
			"problemMatcher": "$tsc-watch"
		},
		{
			"label": "tasks: watch-tests",
			"dependsOn": [
				"npm: watch",
				"npm: watch-tests"
			],
			"problemMatcher": []
		}
	]
}