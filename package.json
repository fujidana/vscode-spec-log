{
	"publisher": "fujidana",
	"name": "spec-log",
	"displayName": "spec log",
	"description": "spec log file support for VS Code",
	"version": "1.3.1",
	"engines": {
		"vscode": "^1.78.0"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"X-ray diffraction",
		"synchrotron",
		"instrument control",
		"data acquisition"
	],
	"icon": "resources/icon.png",
	"license": "SEE LICENSE IN LICENSE",
	"bugs": {
		"url": "https://github.com/fujidana/vscode-spec-log/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/fujidana/vscode-spec-log.git"
	},
	"homepage": "https://github.com/fujidana/vscode-spec-log#readme",
	"activationEvents": [
		"onLanguage:spec-log"
	],
	"main": "./dist/node/extension.js",
	"browser": "./dist/web/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "spec-log",
				"aliases": [
					"spec log",
					"spec-log"
				],
				"extensions": [
					".tlog"
				]
			}
		],
		"grammars": [
			{
				"language": "spec-log",
				"scopeName": "source.spec-log",
				"path": "./syntaxes/specLog.tmLanguage.json"
			}
		]
	},
	"capabilities": {
		"virtualWorkspaces": true,
		"untrustedWorkspaces": {
			"supported": true
		}
	},
	"scripts": {
		"vscode:prepublish": "pnpm run package && pnpm run js-yaml",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest-node": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
		"test-node": "node ./out/test/runTest.js",
		"pretest-web": "pnpm run compile",
		"test-web": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=./dist/web/test/suite/index.js",
		"lint": "eslint src --ext ts",
		"run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. .",
		"js-yaml": "js-yaml ./src/specLog.tmLanguage.yaml > ./syntaxes/specLog.tmLanguage.json"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "20.2.5",
		"@types/vscode": "^1.78.0",
		"@types/webpack-env": "^1.18.1",
		"@typescript-eslint/eslint-plugin": "^5.59.8",
		"@typescript-eslint/parser": "^5.59.8",
		"@vscode/test-electron": "^2.3.2",
		"@vscode/test-web": "^0.0.44",
		"assert": "^2.0.0",
		"eslint": "^8.41.0",
		"glob": "^8.1.0",
		"js-yaml": "^4.1.0",
		"mocha": "^10.2.0",
		"process": "^0.11.10",
		"ts-loader": "^9.4.3",
		"typescript": "^5.1.3",
		"webpack": "^5.85.0",
		"webpack-cli": "^5.1.1"
	}
}
