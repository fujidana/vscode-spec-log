{
	"publisher": "fujidana",
	"name": "spec-log",
	"displayName": "spec log",
	"description": "spec log file support for VS Code",
	"version": "1.1.2-alpha",
	"engines": {
		"vscode": "^1.59.0"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"X-ray diffraction",
		"synchrotron",
		"instrument control",
		"data acquisition"
	],
	"icon": "resources/icon.png",
	"license": "SEE LICENSE IN LICENSE",
	"bugs": {
		"url": "https://github.com/fujidana/vscode-spec-log/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/fujidana/vscode-spec-log.git"
	},
	"homepage": "https://github.com/fujidana/vscode-spec-log#readme",
	"activationEvents": [
		"onLanguage:spec-log"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "spec-log",
				"aliases": [
					"spec log",
					"spec-log"
				],
				"extensions": [
					".tlog"
				]
			}
		],
		"grammars": [
			{
				"language": "spec-log",
				"scopeName": "source.spec-log",
				"path": "./syntaxes/specLog.tmLanguage.json"
			}
		]
	},
	"capabilities": {
		"untrustedWorkspaces": {
			"supported": true
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package && npm run js-yaml",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"js-yaml": "js-yaml ./src/specLog.tmLanguage.yaml > ./syntaxes/specLog.tmLanguage.json"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.59.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"js-yaml": "^4.1.0",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"ts-loader": "^9.2.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	}
}
