{
	"publisher": "fujidana",
	"name": "spec-log",
	"displayName": "spec log",
	"description": "spec log file support for VS Code",
	"version": "1.2.2-alpha",
	"engines": {
		"vscode": "^1.70.0"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"X-ray diffraction",
		"synchrotron",
		"instrument control",
		"data acquisition"
	],
	"icon": "resources/icon.png",
	"license": "SEE LICENSE IN LICENSE",
	"bugs": {
		"url": "https://github.com/fujidana/vscode-spec-log/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/fujidana/vscode-spec-log.git"
	},
	"homepage": "https://github.com/fujidana/vscode-spec-log#readme",
	"activationEvents": [
		"onLanguage:spec-log"
	],
	"main": "./dist/extension-node.js",
	"browser": "./dist/extension-web.js",
	"contributes": {
		"languages": [
			{
				"id": "spec-log",
				"aliases": [
					"spec log",
					"spec-log"
				],
				"extensions": [
					".tlog"
				]
			}
		],
		"grammars": [
			{
				"language": "spec-log",
				"scopeName": "source.spec-log",
				"path": "./syntaxes/specLog.tmLanguage.json"
			}
		]
	},
	"capabilities": {
		"virtualWorkspaces": true,
		"untrustedWorkspaces": {
			"supported": true
		}
	},
	"scripts": {
		"vscode:prepublish": "pnpm run package && pnpm run js-yaml",
		"compile": "webpack",
		"watch": "webpack --watch",
		"test": "pnpm run compile && pnpm run test-node && pnpm run test-web",
		"test-node": "node ./dist/test/runTest.js",
		"test-web": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=./dist/test/suite/index-web.js",
		"package": "webpack --mode production --devtool hidden-source-map",
		"lint": "eslint src --ext ts",
		"run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. .",
		"js-yaml": "js-yaml ./src/specLog.tmLanguage.yaml > ./syntaxes/specLog.tmLanguage.json"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.70.0",
		"@types/webpack-env": "^1.17.0",
		"@typescript-eslint/eslint-plugin": "^5.33.0",
		"@typescript-eslint/parser": "^5.33.0",
		"@vscode/test-electron": "^2.1.5",
		"@vscode/test-web": "^0.0.29",
		"assert": "^2.0.0",
		"eslint": "^8.20.0",
		"glob": "^8.0.3",
		"js-yaml": "^4.1.0",
		"mocha": "^10.0.0",
		"process": "^0.11.10",
		"ts-loader": "^9.3.1",
		"typescript": "^4.7.4",
		"webpack": "^5.74.0",
		"webpack-cli": "^4.10.0"
	}
}
